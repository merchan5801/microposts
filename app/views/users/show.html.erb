<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
　　  <p>地域:<%= @user.locate %></p>
  　　<p>プロフィール:<%= @user.profile %></p>
    
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <!--ここもページネーションしたい。このファイルはusersフォルダのshowだから該当コントローラーは・・・-->
        <!--マイクロポストのページネーション上部インフォメーション部分-->
        <%= page_entries_info @microposts %>
        <%= render @microposts %>
        <!--マイクロポストのページネーション下部の実行部分-->
        <%= will_paginate @microposts %>        
        
      </ol>
    <% end %>
  </div>
</div>